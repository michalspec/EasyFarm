@model EasyFarm.DTO.AddCalfDto 

@{
    TempData["Title"] = "Add new calf";
    Layout = "_Layout";
}

<h2>Add new Calf</h2>

<div class="row">
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="EaringId"></label>
            <input asp-for="EaringId" />
            <span asp-validation-for="EaringId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Birthday"></label>
            <input asp-for="Birthday" />
            <span asp-validation-for="Birthday" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Mother"></label>
            <input asp-for="Mother" />
            <span asp-validation-for="Mother" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-primary">Add new</button>
    </form>

</div>
